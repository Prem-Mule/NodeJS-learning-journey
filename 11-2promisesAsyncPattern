const { readFile } = require("fs");
const getText = (path) => {
  console.log("getText");
  return new Promise((resolve, reject) => {
    readFile(path, "utf8", (err, data) => {
      if (err) {
        reject(err);
      } else if (data) {
        resolve(data);
      }
    });
  });
};
console.log("start");
getText("./Content/second.txt")
  .then((data) => {
    console.log("data: ", data);
  })
  .catch((error) => {
    console.log("Error: ", error);
  });
console.log("startnext");
